<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonenDatenbank.Pages.Pg_Persons">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Persons}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding UserName}"/>
                                <Label Text="{Binding BirthDate}"/>
                                <Label Text="{Binding IsMarried}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button Text="Person lÃ¶schen" Clicked="OnDeletePerson_clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>