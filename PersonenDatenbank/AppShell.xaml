             xmlns:pages="clr-namespace:PersonenDatenbank.Pages"
             x:Class="PersonenDatenbank.AppShell"
             Shell.FlyoutBehavior="Flyout">
    
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="HomePage">
        
    </ShellContent>
    
    <ShellContent
        Title="Add"
